<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="25dp"
            android:paddingRight="20dp"
            android:paddingTop="25dp">

            <EditText
                android:id="@+id/txtTitle"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_gravity="center_vertical"
                android:layout_marginBottom="20dp"
                android:background="@xml/box_layout"
                android:hint="Title"
                android:maxLines="1"
                android:paddingLeft="15dp"
                android:singleLine="true"
                android:textColorHint="@color/abc_secondary_text_material_light" />

            <EditText
                android:id="@+id/txtDescription"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_gravity="center_vertical"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="20dp"
                android:background="@xml/box_layout"
                android:gravity="top"
                android:hint="Description (512 max)"
                android:paddingLeft="15dp"
                android:paddingTop="5dp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/txtPrice"
                    android:layout_width="150dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center_vertical"
                    android:background="@xml/box_layout"
                    android:hint="@string/price"
                    android:maxLines="1"
                    android:paddingLeft="10dp"
                    android:singleLine="true" />

                <Spinner
                    android:id="@+id/spPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_horizontal"
                    android:layout_weight="0.01"
                    android:entries="@array/spinnerCurr" />

            </LinearLayout>

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:text="*If you don&apos;t want price to be visible, please use 0"
                android:textAppearance="?android:attr/textAppearanceSmall" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="60dp"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnNext"
                android:layout_width="130dp"
                android:layout_height="40dp"

                android:layout_gravity="center"
                android:layout_marginBottom="20dp"

                android:layout_marginTop="20dp"
                android:background="@xml/btn_normal"
                android:text="@string/next"
                android:textAllCaps="false"
                android:textColor="@color/colorPrimary"
                android:textSize="18sp" />
        </LinearLayout>

    </RelativeLayout>


</LinearLayout>